<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:background="@color/top_bg_color">
        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ico_search"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_title"
            android:layout_centerInParent="true" />
        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ico_message"/>
    </RelativeLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/pull_to_refresh_scrollview"
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ptr:ptrDrawable="@drawable/arrow"
        ptr:ptrAnimationStyle="flip"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.qianfeng.yiyuantao.custom.HeadBannerView
                android:id="@+id/head_banner"
                android:layout_width="match_parent"
                android:layout_height="120dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#88746e6e"/>
            <RadioGroup
                android:id="@+id/first_page_menu_group"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="10dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/menu_tenyuan"
                    style="@style/FirstPageMenuStyle"
                    android:drawableTop="@mipmap/icon_tenyuan"
                    android:text="@string/home_page_menu_text1"/>
                <RadioButton
                    android:id="@+id/menu_new_activity"
                    style="@style/FirstPageMenuStyle"
                    android:drawableTop="@mipmap/icon_activity"
                    android:text="@string/home_page_menu_text2"/>
                <RadioButton
                    android:id="@+id/menu_show"
                    style="@style/FirstPageMenuStyle"
                    android:drawableTop="@mipmap/icon_show"
                    android:text="@string/home_page_menu_text3"/>
                <RadioButton
                    android:id="@+id/menu_help"
                    style="@style/FirstPageMenuStyle"
                    android:drawableTop="@mipmap/icon_help"
                    android:text="@string/home_page_menu_text4"/>
            </RadioGroup>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_prize_list_head"/>
            <com.qianfeng.yiyuantao.custom.FirstPageNewPublishView
                android:id="@+id/new_publish_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_prize_list_head"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/right_commidity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@mipmap/btn_right_on_pressed"
                    android:text="人气推荐"/>
                <com.qianfeng.yiyuantao.custom.MyGridView
                    android:id="@+id/gv_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:numColumns="2"/>
            </LinearLayout>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
    



</LinearLayout>