<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        android:background="@color/top_bg_color">
        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ico_search"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_title"
            android:layout_centerInParent="true" />
        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ico_message"/>
    </RelativeLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_banner"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <RadioButton
            style="@style/FirstPageMenuStyle"
            android:drawableTop="@mipmap/icon_tenyuan"
            android:text="@string/home_page_menu_text1"/>
        <RadioButton
            style="@style/FirstPageMenuStyle"
            android:drawableTop="@mipmap/icon_activity"
            android:text="@string/home_page_menu_text2"/>
        <RadioButton
            style="@style/FirstPageMenuStyle"
            android:drawableTop="@mipmap/icon_show"
            android:text="@string/home_page_menu_text3"/>
        <RadioButton
            style="@style/FirstPageMenuStyle"
            android:drawableTop="@mipmap/icon_help"
            android:text="@string/home_page_menu_text4"/>
    </RadioGroup>


</LinearLayout>