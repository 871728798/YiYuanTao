<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <FrameLayout
        android:id="@+id/fl_id"
        android:layout_width="90dp"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"

            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ico_bingo_lottery" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/fl_id"
        android:text="title" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/fl_id"
        android:text="价格"
        android:textColor="#6292f1" />

    <ImageView
        android:id="@+id/iv_time"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_price"

        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/fl_id"
        android:scaleType="centerCrop"
        android:src="@drawable/ico_time" />

    <TextView
        android:id="@+id/tv_publishing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_price"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/iv_time"
        android:text="揭晓倒计时"
        android:textColor="@color/top_bg_color"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/fl_id"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_tab_bottom">

    </LinearLayout>


</RelativeLayout>