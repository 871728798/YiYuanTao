<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:actionBarSize">@android:style/Theme.Holo.NoActionBar</item>-->
        <!-- Customize your theme here. -->
    </style>

    <declare-styleable name="navproperties">
        <attr name="count" format="integer"/>
        <attr name="checkedimg" format="reference"/>
        <attr name="uncheckedimg" format="reference"/>
    </declare-styleable>

    <style name="HomeTabStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/home_tab_text_colot_select</item>
        <item name="android:background">#0fff</item>
    </style>
    <style name="FirstPageMenuStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">#0fff</item>
    </style>
    <style name="rb_all_commodity">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#696666</item>
        <item name="android:background">@drawable/all_commodity_rb_color</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
